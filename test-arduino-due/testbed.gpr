project Testbed is
   for Main use ("testbed.adb");
   for Object_Dir use ".build";
   for Source_Dirs use (".", "../test-common");
   for Exec_Dir use ".";
   for Target use "arm-eabi";
   for Runtime ("ada") use Testbed'Project_Dir & "../arduino-due";
   package Builder is
      for Default_Switches ("ada") use
        (
         "-g",
         "-Og",
         "-ffunction-sections",
         "-fdata-sections",
         "--create-map-file"
        );
   end Builder;
   package Compiler is
      for Default_Switches ("ada") use
        (
         "-gnatqQafoy",
         "-gnatwaL.X"
        );
   end Compiler;
   package Linker is
      for Default_Switches ("ada") use ("-Wl,-gc-sections");
      for Map_File_Option use "-Wl,-Map," & Testbed'Project_Dir;
   end Linker;
end Testbed;
