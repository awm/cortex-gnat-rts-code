project Testbed is
   for Main use ("testbed.adb");
   for Object_Dir use ".build";
   for Source_Dirs use (".");
   for Exec_Dir use ".";
   for Target use "arm-eabi";
   package Builder is
      for Default_Switches ("ada") use
        (
         "-g",
         "-O0",
         "--RTS=" & Project'Project_Dir & "../stm32f429i-disco-rtos"
        );
   end Builder;
   package Linker is
      --  --create-map-file isn't supported in this configuration
      for Default_Switches ("ada") use
        (
         "-Wl,-Map," & Project'Project_Dir & Project'Name & ".map"
         );
   end Linker;
end Testbed;
