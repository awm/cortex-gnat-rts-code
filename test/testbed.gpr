project Testbed is
   for Main use ("testbed.adb");
   for Object_Dir use ".build";
   for Source_Dirs use (".");
   for Exec_Dir use ".";
   for Target use "arm-eabi";
   package Builder is
      for Default_Switches ("ada") use
        (
         "-g",
         "-Og",
         "--RTS=" & Project'Project_Dir & "../stm32f429i-disco-rtos",
         "--create-map-file"
        );
   end Builder;
   package Compiler is
      for Default_Switches ("ada") use
        (
         "-gnatqQafoy",
         "-gnatwaL.X"
        );
   end Compiler;
   package Linker is
      for Map_File_Option use "-Wl,-Map," & Project'Project_Dir;
   end Linker;
end Testbed;
